@model PartPageListingModel

@{
    ViewData["Title"] = "All Parts";
}

    <h1>
        @ViewData["Title"]
        <a class="btn btn-primary" href="/parts/create">Add Part</a>
    </h1>

@{
    var previousDisabled = Model.CurrentPage == 1 ? "dislabled" : String.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "dislabled" : String.Empty;
}
<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link" href="/parts/all?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
    }
    <li class="page-item @nextDisabled">
        <a class="page-link" href="/parts/all?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Supplier Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <th>
                    @part.Name
                </th>
                <th>
                    @part.Price
                </th>
                <th>
                    @part.Quantity
                </th>
                <th>
                    @part.SupplierName
                </th>
            </tr>
        }
    </tbody>
</table>



<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link" href="/parts/all?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
    }
    <li class="page-item @nextDisabled">
        <a class="page-link" href="/parts/all?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>