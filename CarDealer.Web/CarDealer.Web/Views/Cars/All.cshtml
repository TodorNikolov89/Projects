@model IEnumerable<CarViewModel>

@{
    ViewData["Title"] = "All Cars";
}

<h1>
    @ViewData["Title"]
    <a href="/cars/create/" class="btn btn-primary">Add Car</a>
</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <th>
                    @car.Make
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @(car.TravelledDistance / 1000) KM
                </th>
                <th>
                    <a href="/cars/edit/@car.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/cars/delete/@car.Id" class="btn btn-danger btn-sm">Delete Car</a>
                </th>
            </tr>
        }
    </tbody>
</table>